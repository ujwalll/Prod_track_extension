{
	"manifest_version": 2,

	"name": "Take A Break",
	"description": "Helps you keep track of your browsing habits and tells you when to take a break.",

	"version": "0.1",

	"icons": {
		"128": "icons/i128.png",
		"48": "icons/i48.png",
		"16": "icons/i16.png"
	},

	"browser_action": {
		"default_popup": "pages/index.htm",
		"default_icon": "icons/i48.png"
	},
	"background": {
		"scripts": ["js/track.js", "js/break.js"],
		"persistent": true
	},
	"permissions": [
		"tabs",
		"notifications",
		"storage",
		"https://*/*",
		"http://*/*"
	]
}
